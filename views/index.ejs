                      <div class="row">
                        <div class="col-md-5 col-sm-5">
                            <div class="form-group">
                              <label>Name: </label>
                              <input class="form-control" type="text" id="contactName" value="" placeholder="Enter Name">
                            </div>
                            <div class="form-group">
                              <label>Email: </label>
                              <input class="form-control" type="text" id="contactEmail" value="" placeholder="Enter Email">
                            </div>
                            <div class="form-group">
                              <label>Message: </label>
                              <textarea class="form-control" id="contactMessage" value="" placeholder="Enter Message" rows="10"></textarea>
                            </div>
                            <button class="btn btn-default" style="padding: 15px" onClick="contactClick()">Submit</button>
                        </div>
                        <div class="col-md-7 col-sm-7">

                        </div>
                      </div>
                    </div>
                  </section>
                </div>
